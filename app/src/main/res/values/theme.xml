<?xml version="1.0" encoding="utf-8"?>
<resources>



    <!--大背景背景颜色-->
    <attr name="bgColor" format="color" />
    <!--文字颜色-->
    <attr name="textColor" format="color" />
    <!--高斯模糊渲染色-->
    <attr name="blurColor" format="color" />



    <!--白天主题-->
    <style name="LightTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bgColor">@color/lightBg</item>
        <item name="textColor">@android:color/black</item>
        <item name="blurColor">@color/blurWhite</item>

    </style>

    <!--黑夜主题-->
    <style name="DarkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bgColor">@android:color/black</item>
        <item name="textColor">@android:color/white</item>
        <item name="blurColor">@color/blurBlack</item>
    </style>


    <!--white dream主题-->
    <style name="WhiteDreamTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bgColor">@android:color/darker_gray</item>
        <item name="textColor">@android:color/white</item>
    </style>






</resources>